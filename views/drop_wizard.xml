<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <!-- Odoo View Definition for Whatsapp Message Form -->
   <record id="drop_student_wizard_for_view" model="ir.ui.view">
       <field name="name">drop.student.view.form</field>
       <field name="model">drop.student.wizard</field>
       <field name="priority" eval="8"/>
       <field name="arch" type="xml">
           <form string="Drop Student">
               <group>
                   <field name="student_id"/>
                   <field name="drop_date"/>
               </group>
               <group>
                   <field name="reason"/>
               </group>
               <footer>
                   <button name="act_submit_drop" string="Submit" type="object" class="oe_highlight"/>
                   <button name="cancel" string="Cancel" special="cancel"/>
               </footer>
           </form>
       </field>
   </record>
</odoo>
