<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Odoo View Definition for Whatsapp Message Form -->
    <record id="enrollment_batch_wizard_view_form" model="ir.ui.view">
        <field name="name">enrollment.batch.view.form</field>
        <field name="model">enrollment.batch.wizard</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Batch Enrollment">
                <group>
                    <group>
                        <field name="student_id"/>
                        <field name="batch_id"/>
                        <field name="fee_type"/>

                    </group>
                </group>
                <footer>
                    <button name="enrollment_batch" string="Enrollment" type="object" class="oe_highlight"/>
                    <button name="cancel" string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>