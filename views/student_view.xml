<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="kanban_view_student" model="ir.ui.view">
            <field name="name">Student Kanban</field>
            <field name="model">op.student</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="id"/>
                    <field name="image_1920"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click o_res_partner_kanban">
                                <a type="open">
                                    <div class="o_kanban_image" style="background:#e6e5e6;">
                                        <t t-if="record.image_1920.value">
                                            <img
                                                    t-att-src="kanban_image('op.student', 'image_1920', record.id.raw_value)"
                                                    alt="Student"/>
                                        </t>
                                        <t t-if="!record.image_1920.value">
                                            <img src="/base/static/img/avatar.png" alt="Student"/>
                                        </t>
                                    </div>
                                    <div class="oe_kanban_details">
                                        <h4>
                                            <field name="name"/>
                                        </h4>
                                        <ul>
                                            <li t-if="record.contact_address.raw_value">
                                                <field name="contact_address"/>
                                            </li>
                                            <li t-if="record.phone.raw_value">
                                                <field name="phone"/>
                                            </li>
                                            <li t-if="record.mobile.raw_value">
                                                <field name="mobile"/>
                                            </li>
                                            <li t-if="record.email.raw_value">
                                                <a t-attf-href="mailto:#{record.email.value}">
                                                    <field name="email"/>
                                                </a>
                                            </li>
                                            <li t-if="record.lang.raw_value">
                                                <field name="lang"/>
                                            </li>
                                        </ul>
                                    </div>
                                </a>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="view_op_student_tree" model="ir.ui.view">
            <field name="name">op.student.tree</field>
            <field name="model">op.student</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">

                <tree string="Student">
                    <!--                    <style>-->
                    <!--                        .custom-wallet-icon::before {-->
                    <!--                        content: "\f555"; /* Unicode for wallet icon */-->
                    <!--                        font-family: "FontAwesome";-->
                    <!--                        }-->
                    <!--                    </style>-->
                    <!--                    <field name="title" optional="show"/>-->
                    <field name="gr_no" string="Reg No"/>
                    <!--                    <field name="admission_date"/>-->
                    <field name="name"/>
                    <!--                    <field name="gender" optional="hide"/>-->
                    <!--                    <field name="birth_date" optional="hide"/>-->
                    <!--                    <field name="gr_no" optional="hide"/>-->
                    <field name="mobile"/>
                    <field name="email"/>
                    <field name="batch_id"/>
                    <!--                    <field name="branch"/>-->
                    <!--                    <field name="blood_group"/>-->
<!--                    <field name="emergency_contact"/>-->
                    <field name="course_id"/>
                    <field name="due_amount" string="Fees Pending"/>
                    <!--                    <field name="nationality"/>-->
                    <!--                    <field name="lang" options="hide"/>-->
                    <button name="act_add_amount_to_wallet" type="object"
                            icon="fa-credit-card" string="Add to Wallet"/>
                    <field name="state" widget="badge" decoration-info="state == 'confirm'"
                           decoration-success="state == 'batch_allocated'" decoration-danger="state == 'stoped'"/>
                </tree>
            </field>
        </record>

        <record id="view_op_student_form" model="ir.ui.view">
            <field name="name">op.student.form</field>
            <field name="model">op.student</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Student">
                    <style>
                        .btn-collect_fee {
                        background-color: #5f874a;
                        width: 120px;
                        height: 35px;
                        font-size: 14px;
                        color: white;
                        text-align: center;
                        }
                        .btn-create-student {
                        background-color: #3d4d87;
                        width: 150px;
                        height: 35px;
                        font-size: 14px;
                        color: white;
                        text-align: center;
                        border-radius: 2px;
                        }
                        .btn-drop {
                        background-color: #bf3d4c;
                        width: 80px;
                        height: 35px;
                        font-size: 14px;
                        color: white;
                        text-align: center;
                        }
                        .btn-create-receipt {
                        background-color: #3f5b6e;
                        width: 120px;
                        height: 35px;
                        font-size: 14px;
                        color: white;
                        text-align: center;
                        }
                        .card {
                        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                        transition: 0.3s;
                        width: 20%;
                        background-color: #283880;
                        color: white; /* Set font color to white */
                        text-align: center; /* Center the text within the card */
                        }
                        .due_card {
                        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                        transition: 0.3s;
                        width: 20%;
                        background-color: #b8453d;
                        color: white; /* Set font color to white */
                        text-align: center; /* Center the text within the card */
                        }
                        .due_card_negative {
                        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                        transition: 0.3s;
                        width: 20%;
                        background-color: #6a8f53;
                        color: white; /* Set font color to white */
                        text-align: center; /* Center the text within the card */
                        }
                        .dropped_date {
                        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                        transition: 0.3s;
                        width: 20%;
                        background-color: #db2f23;
                        color: white; /* Set font color to white */
                        text-align: center; /* Center the text within the card */
                        position: absolute;
                        right: 100px; /* Align to right edge */

                        }

                        .container {
                        padding: 2px 16px;
                        display: flex; /* Use flexbox for alignment */
                        justify-content: space-between; /* Space out items horizontally */
                        align-items: center; /* Align items vertically in the center */
                        }
                        .container h4 {
                        margin: 0; /* Remove any default margin */
                        font-size: 16px; /* Adjust font size if needed */
                        width: 100%; /* Ensure full width for alignment */
                        }
                        .admission-fee-container {
                        display: flex;
                        align-items: center; /* Vertically center the field and the checkmark */
                        gap: 5px; /* Add spacing between the field and the checkmark */
                        }

                        .checkmark {
                        display: inline-block;
                        position: relative;
                        width: 12px; /* Width of the checkmark */
                        height: 12px; /* Height of the checkmark */
                        transform: rotate(45deg); /* Rotate to form the checkmark shape */
                        margin-left: 5px; /* Add some space from the field */
                        }

                        .checkmark_stem {
                        position: absolute;
                        width: 2px; /* Thickness of the checkmark stem */
                        height: 9px; /* Length of the checkmark stem */
                        background-color: green; /* Checkmark color */
                        left: 5px; /* Position the stem */
                        top: 0;
                        }

                        .checkmark_kick {
                        position: absolute;
                        width: 6px; /* Length of the checkmark kick */
                        height: 2px; /* Thickness of the checkmark kick */
                        background-color: green; /* Checkmark color */
                        left: 0;
                        top: 6px;
                        }
                        .change_plan_button {
                        background-color: #c99f6f; /* Checkmark color */

                        }
                        .o_form_group {
                        margin-bottom: 0 !important; /* Remove default margin */
                        padding-bottom: 0 !important; /* Remove default padding */
                        }


                    </style>
                    <header>
                        <button type="object" name="create_student_user"
                                string="Create Student User"
                                class="btn-create-student"
                                groups="openeducat_core.group_op_back_office_admin"
                                invisible="user_id != False or state == 'stoped'"/>
                        <button name="act_allocate_to_batch" type="object" string="Allocate to Batch"
                                class="oe_highlight" invisible="state != 'confirm'"/>

                        <button name="act_create_receipt" string="Create Receipt" type="object"
                                invisible="state == 'stoped'" class="btn-create-receipt"/>
                        <button name="act_collect_fee" string="Create Invoice" type="object" class="btn-collect_fee"
                                invisible="state == 'stoped' or make_visible_admission_officer == 1"/>
                        <button name="act_drop_student" string="Drop" type="object" class="btn-drop"
                                invisible="state == 'stoped'"/>
                        <button name="act_enrollment_batch" string="Enrollment" type="object" class="oe_highlight" invisible="state != 'batch_allocated'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <!--                        <widget name="web_ribbon"-->
                        <!--                                title="%(rec.ribbon_title)"-->
                        <!--                                bg_color="text-bg-danger"-->
                        <!--                                invisible="state != 'stoped'"/>-->

                        <div name="button_box" position="inside">
                            <button class="oe_stat_button" type="object" name="get_current_wallet_collection"
                                    icon="fa-book">
                                <field string="Wallet Collections" name="wallet_smart_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div name="button_box" class="oe_button_box">
                        </div>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                invisible="active == True"/>
                        <widget name="web_ribbon"
                                title="Dropped"
                                bg_color="bg-danger"
                                invisible="state != 'stoped'"/>

                        <div style="width:100%;" class="row align-items-center">
                            <div class="col-4 col-lg-2" style="text-align-last: center;">
                                <field name="image_1920" widget="image" class="oe_left oe_avatar"
                                       style="margin-right: 30px !important;"/>
                            </div>
                            <div class="mb16 col-8 col-lg-10 px-0">
                                <div class="row">
                                    <!--                                    <h2 class="col-12 col-lg-2">-->
                                    <!--                                        <field name="title" placeholder="Title"/>-->
                                    <!--                                    </h2>-->
                                    <h2 class="col-12 col-lg-10">
                                        <!--                                        <field name="name" placeholder="Name" required="1" invisible="1"/>-->
                                        <table>
                                            <tr>
                                                <td style="padding-right:10px;">
                                                    <field name="name" required="1" placeholder="Student Name"/>
                                                </td>
                                            </tr>

                                        </table>

                                    </h2>
                                </div>

                                <group>
                                    <group>
                                        <field name="gr_no" string="Reg No"/>
                                        <field name="mobile" placeholder="Mobile Number"/>
                                        <field name="email" required="1" placeholder="Email Address"/>
                                    </group>
                                    <div class="card" invisible="state == 'stoped'">
                                        <div class="container">
                                            <h4>
                                                <b style="color:white;" align="center">Wallet Balance
                                                    <field name="wallet_balance"/>
                                                </b>

                                            </h4>

                                            <!--                                            <field name="wallet_balance" readonly="1"/>-->
                                        </div>
                                    </div>
                                    <div class="dropped_date" invisible="state != 'stoped'">
                                        <div class="container">
                                            <h4>
                                                <b style="color:white;" align="center">DROPPED DATE
                                                    <field name="drop_date"/>
                                                </b>

                                            </h4>
                                        </div>
                                    </div>
                                    <div class="due_card_negative" invisible="state == 'stoped' or due_amount >= 0">
                                        <div class="container">
                                            <h4>
                                                <b style="color:white;" align="center">Payment Dues
                                                    <field name="due_amount"/>
                                                </b>

                                            </h4>
                                        </div>
                                    </div>
                                    <div class="due_card_negative" invisible="state == 'stoped' or due_amount != 0">
                                        <div class="container">
                                            <h4>
                                                <b style="color:white;" align="center">Payment Dues
                                                    <field name="due_amount"/>
                                                </b>
                                            </h4>
                                        </div>
                                    </div>

                                    <div class="due_card" invisible="state == 'stoped' or due_amount &lt;= 0">
                                        <div class="container">
                                            <h4>
                                                <b style="color:white;" align="center">Payment Dues
                                                    <field name="due_amount"/>
                                                </b>

                                            </h4>

                                            <!--                                            <field name="wallet_balance" readonly="1"/>-->
                                        </div>
                                    </div>

                                </group>
                            </div>
                        </div>

                        <notebook colspan="4">
                            <page name="payment_history" string="Payment History">


                                <field name="payment_ids">
                                    <tree editable="bottom" readonly="0">
                                        <field name="sl_no"/>
                                        <field name="currency_id" optional="hide"/>
                                        <field name="date" readonly="0"/>
                                        <field name="payment_mode" optional="hide"/>
                                        <!--                                        <field name="payment_type"/>-->
                                        <field name="fee_type" optional="1"/>
                                        <field name="voucher_no" readonly="0"/>
                                        <field name="voucher_name"/>
                                        <field name="fee_name" string="Fee Name"/>
                                        <field name="type"/>
                                        <field name="branch"/>
                                        <field name="cheque_no" string="Cheque No./Reference No."/>
                                        <field name="invoice_no" optional="hide"/>
                                        <field name="debit_amount"/>
                                        <field name="credit_amount"/>
                                        <field name="balance"/>
                                        <field name="balance_type" string="" widget="badge"/>
                                        <!--                                        <field name="reference_no"/>-->
                                        <field name="amount_exc_tax" widget="monetary" optional="hide"/>
                                        <field name="tax_amount" widget="monetary" optional="hide"/>
                                        <!--                                        <field name="cgst_amount" invisible="1"/>-->
                                        <!--                                        <field name="sgst_amount" invisible="1"/>-->
                                        <field name="amount_inc_tax" widget="monetary" optional="hide"/>
                                        <field name="total_amount" widget="monetary" optional="hide"/>
                                        <!--                                        <field name="amount_in_words" invisible="1"/>-->
                                        <button name="act_print_invoice" type="object" class="fa fa-download"
                                                invisible="type != 'invoice'" string=" Invoice"/>
                                        <button name="act_print_invoice_non_taxable" type="object"
                                                class="fa fa-download" invisible="type != 'receipt'" string=" Receipt"/>
                                    </tree>
                                </field>
                                <!--                                        <field name="admission_fee"/>-->
                                <!--                                        <field name="batch_fee"/>-->
                                <!--                                        <field name="fee_type"/>-->
                                <!--                                        <field name="batch_id"/>-->
                                <!--                                        <field name="branch_id"/>-->
                                <!--                                        <field name="course_id"/>-->
                            </page>
                            <page name="personal_information" string="Personal Information">
                                <group name="personal_detail">
                                    <group>
                                        <field name="gender" required="1"/>
                                        <field name="birth_date"/>
                                        <label for="type"/>
                                        <div name="div_type">
                                            <field class="oe_inline" name="type"/>
                                        </div>
                                        <label for="street" string="Address"/>
                                        <div name="o_address_format">
                                            <field name="street" placeholder="Street..."/>
                                            <field name="street2" placeholder="Street2"/>
                                            <div class="address_format">
                                                <field name="city" placeholder="City" style="width: 40%"/>
                                                <field name="state_id" class="oe_no_button" placeholder="State"
                                                       style="width: 37%" options="{&quot;no_open&quot;: True}"/>
                                                <field name="zip" placeholder="ZIP" style="width: 20%"/>
                                            </div>
                                            <field name="country_id" placeholder="Country" class="oe_no_button"
                                                   options="{&quot;no_open&quot;: True}"/>
                                        </div>
                                        <field name="emergency_contact" context="{'show_address': 1}"
                                               options="{&quot;always_reload&quot;: True}"/>
                                    </group>
                                    <group>
                                        <field name="currency_id" invisible="1"/>


                                        <field name="lang"/>
                                        <field name="blood_group"/>
                                        <field name="nationality"/>
                                        <field name="visa_info"/>
                                        <field name="category_id"/>
                                        <field name="user_id" string="User" readonly="1"/>
                                        <field name="partner_id" placeholder="Partner" required="0"/>
                                        <!--                                        <field name="branch_id"/>-->
                                    </group>

                                    <group string="Family Details">
                                        <field name="parent_name"/>
                                        <field name="parent_whatsapp"/>
                                        <field name="parent_email"/>
                                        <field name="father_name"/>
                                        <field name="father_number"/>
                                        <field name="mother_name"/>
                                        <field name="mother_number"/>
                                    </group>
                                    <group string="Drop Details" invisible="state != 'stoped'">
                                        <field name="drop_date" style="background-color:#fa7070"/>
                                        <field name="drop_reason" style="background-color:#fa7070"/>
                                    </group>
                                    <separator string="miscellaneous" colspan="2"/>
                                    <group colspan="3">
                                        <field name="gr_no"/>
                                    </group>
                                </group>
                            </page>

                            <page name="course_details" string="Course Details">
                                <group>
                                    <group>
                                        <field name="batch_id" style="background-color:#89d674;"/>
                                        <field name="course_id"/>
                                        <field name="admission_fee" widget="monetary"/>
                                        <field name="make_visible_admission_officer" invisible="1"/>


                                        <!--                                        <field name="fee_type"/>-->
                                        <!--                                        <field name="batch_id"/>-->
                                        <!--                                        <field name="branch_id"/>-->
                                        <!--                                        <field name="course_id"/>-->
                                    </group>
                                    <!--                                    <group string="Admission Fee">-->
                                    <!--                                        <div class="admission-fee-container">-->

                                    <!--                                            &lt;!&ndash;                                            <span class="checkmark">&ndash;&gt;-->
                                    <!--                                            &lt;!&ndash;                                                <div class="checkmark_stem"></div>&ndash;&gt;-->
                                    <!--                                            &lt;!&ndash;                                                <div class="checkmark_kick"></div>&ndash;&gt;-->
                                    <!--                                            &lt;!&ndash;                                            </span>&ndash;&gt;-->
                                    <!--                                            <field name="admission_fee_paid" readonly="1"/>-->
                                    <!--                                        </div>-->
                                    <!--                                    </group>-->

                                    <group name="closing_balance" style="background-color:#d5dbd6">
                                        <field name="closing_balance" widget="monetary"/>
                                        <field name="credit_balance_erp" widget="monetary"/>
                                        

                                        <div style="text-align: center; margin-top: 10px; margin-left:300px">
                                            <button name="act_add_closing_balance" string="Submit" type="object"
                                                    class="oe_highlight"/>
                                        </div>
                                    </group>


                                    <div class="o_inner_group">
                                        <group style="background-color:#ede9dd">
                                            <label for="fee_type"/>
                                            <div class="o_row">
                                                <field name="fee_type"/>
                                                <button name="act_change_fee_plan" string="Change Plan" type="object"
                                                        icon="fa-reply" class="change_plan_button"
                                                        groups="openeducat_core.group_op_back_office_accounts"/>
                                            </div>
                                        </group>


                                        <group string="Lump Sum Fee Details" name="fee_details"
                                               invisible="fee_type != 'lump_sum_fee'" style="background-color:#ede9dd">

                                            <field name="batch_fee" widget="monetary"/>
                                            <field name="discount" widget="monetary"/>
                                            <field name="total_payable_tax" widget="monetary"/>
                                            <field name="paid_amount" widget="monetary"/>
                                            <field name="due_amount" widget="monetary"/>
                                        </group>
                                        <group string="Installment Fee Details" name="inst_fee_details"
                                               invisible="fee_type != 'installment'" style="background-color:#ede9dd">

                                            <field name="batch_fee" widget="monetary"/>
                                            <field name="discount" widget="monetary"/>
                                            <field name="total_payable_tax" widget="monetary"/>
                                            <field name="paid_amount" widget="monetary"/>
                                            <field name="due_amount" widget="monetary"/>
                                        </group>
                                    </div>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_op_student_search" model="ir.ui.view">
            <field name="name">op.student.search</field>
            <field name="model">op.student</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Student">
                    <field name="name"/>
                    <field name="blood_group"/>
                    <newline/>
                    <filter string="Wallet Not Empty" name="wallet_not_empty" domain="[('wallet_balance', '!=', 0)]"/>
                    <filter string="Wallet Empty" name="wallet_empty" domain="[('wallet_balance', '=', 0)]"/>
                    <filter string="Fees Pending" name="fees_pending" domain="[('due_amount', '!=', 0)]"/>
                    <group expand="0" string="Group By...">
                        <filter name="blood_group" string="Blood Group"
                                domain="[]" context="{'group_by':'blood_group'}"/>
                        <filter name="nationality" string="Nationality"
                                domain="[]" context="{'group_by':'nationality'}"/>
                        <filter name="language" string="Language"
                                domain="[]" context="{'group_by':'lang'}"/>
                        <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="changing_payment_plan_wizard_view" model="ir.ui.view">
            <field name="name">changing.payment.view.form</field>
            <field name="model">change.payment.plan</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Payment Plan">
                    <group>
                        <field name="student_id" invisible="1"/>
                        <field name="fee_type"/>
                    </group>
                    <group>
                        <group>
                            <field name="batch_id"/>
                        </group>
                        <group string="Lump Sum Plan" invisible="fee_type != 'lump_sum_fee'">
                            <field name="total_amount"/>
                        </group>
                        <group string="Installment Plan" invisible="fee_type != 'installment'">
                            <field name="total_amount"/>
                        </group>
                    </group>
                    <!--                    <group>-->
                    <!--                        <field name="message"/>-->
                    <!--                    </group>-->
                    <footer>
                        <button name="act_change_fee_type" string="Change" type="object" class="oe_highlight"/>
                        <button name="cancel" string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="act_open_op_student_view">
            <field name="name">Students</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.student</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="view_op_student_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_student_view_form">
            <field name="act_window_id" ref="act_open_op_student_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_student_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_student_view_tree">
            <field name="act_window_id" ref="act_open_op_student_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_student_tree"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_student_view_kanban">
            <field name="act_window_id" ref="act_open_op_student_view"/>
            <field name="sequence" eval="5"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="kanban_view_student"/>
        </record>

        <record model="ir.actions.act_window" id="act_open_op_student_view_2">
            <field name="name">Students</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.student</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="view_op_student_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>
